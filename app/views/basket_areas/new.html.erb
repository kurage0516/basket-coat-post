<div class="items-sell-contents">
  <header class="items-sell-header">
    <%= link_to image_tag('logo2.png' , size: '185x50'), "/" %>

  </header>
  <div class="items-sell-main">
    <h2 class="items-sell-title">バスケコート情報入力</h2>
    <%= form_with model: @basket_area, url: basket_areas_path, local: true do |f| %>

    <%= render 'shared/error_messages', model: f.object %>

    <%# 出品画像 %>
    <div class="img-upload">
      <div class="weight-bold-text">
        バスケコート外観画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"item-image" %>
      </div>
    </div>
    <%# /出品画像 %>
    <%# 商品名と商品説明 %>
    <div class="new-items">
      <div class="weight-bold-text">
        施設名
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_coat_name :product_name, class:"items-text", id:"item-name", placeholder:"施設名（必須 40文字まで)", maxlength:"40" %>
      <div class="items-explain">
        <div class="weight-bold-text">
          住所
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_street_address :text, class:"items-text", id:"item-name", placeholder:"住所（必須 1,000文字まで）市区町村番地まで含めて記載をしてください。 例）東京都文京区後楽1-7-27 後楽鹿島ビル6階" ,rows:"7" ,maxlength:"1000" %>
      </div>
      <div class="items-explain">
        <div class="weight-bold-text">
          URL
          <span class="form-any">任意</span>
        </div>
        <%= f.text_url :text, class:"items-text", id:"item-name" ,maxlength:"1000" %>
      </div>
      <div class="items-explain">
        <div class="weight-bold-text">
          施設利用時間
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_time :text, class:"items-text", id:"item-name", placeholder:"例）9時~17時" ,maxlength:"1000" %>
      </div>
    </div>
    
    <%# /商品名と商品説明 %>
    <%# 販売価格 %>
    <div class="sell-price">
      <div class="weight-bold-text question-text">
        <span>施設料金<br>(¥0~)</span>
      </div>
      <div>
        <div class="price-content">
          <div class="price-text">
            <span>料金</span>
            <span class="indispensable">必須</span>
          </div>
          <span class="sell-yen">¥</span>
          <%= f.text_field :price, class:"price-input", id:"item-price", placeholder:"例）数字のみ。無料の場合は0と記載してください。" %>
        </div>
      </div>
    </div>
    <%# /施設料金 %>
    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "投稿する" , class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
  </div>
  <% end %>

  <footer class="items-sell-footer">
    <%= link_to image_tag('logo2.png' , size: '185x50'), "/" %>
  </footer>
</div>